{
  "name": "kiebitz-ffm",
  "description": "Kiebitz Web Applications",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "contributors": [
    "Benjamin Bender <bb@codepoet.de>",
    "Andreas Dewes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiebitz-oss/apps-ffm"
  },
  "bugs": "https://github.com/kiebitz-oss/apps-ffm/issues",
  "engines": {
    "node": "^14.18.1 || >=16.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "workspaces": [
    "packages/config",
    "packages/api",
    "packages/ui",
    "packages/storybook",
    "apps/user",
    "apps/mediator",
    "apps/provider"
  ],
  "scripts": {
    "postinstall": "yarn build:packages && yarn build:i18n",
    "dev:user": "yarn workspace @kiebitz-oss/app-user run dev",
    "dev:provider": "yarn workspace @kiebitz-oss/app-provider run dev",
    "dev:mediator": "yarn workspace @kiebitz-oss/app-mediator run dev",
    "build": "yarn workspaces run build",
    "build:packages": "yarn workspace @kiebitz-oss/config build && yarn workspace @kiebitz-oss/api build && yarn workspace @kiebitz-oss/ui build",
    "build:apps": "yarn workspace @kiebitz-oss/app-user run build && yarn workspace @kiebitz-oss/app-provider run build && yarn workspace @kiebitz-oss/app-mediator run build",
    "build:i18n": "yarn workspace @kiebitz-oss/app-user run i18n:build && yarn workspace @kiebitz-oss/app-provider run i18n:build && yarn workspace @kiebitz-oss/app-mediator run i18n:build",
    "clean": "yarn workspaces run clean",
    "lint": "yarn workspaces run lint",
    "lint:staged": "yarn workspaces run lint:staged",
    "lint:css": "npx stylelint '**/*.css'",
    "typecheck": "yarn workspaces run typecheck",
    "test": "yarn workspaces run test",
    "test:e2e": "start-server-and-test test:e2e:serve http-get://localhost:3000 'cypress open'",
    "test:e2e:serve": "lingui compile & webpack serve --mode=development",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "reset": "rm -rf node_modules/ yarn.lock packages/storybook/node_modules/ packages/ui/node_modules/ packages/api/node_modules/ apps/mediator/node_modules/ apps/provider/node_modules/ apps/user/node_modules/",
    "docker:build": "docker build . -t kiebitz-apps",
    "docker:run": "docker run -p 3000:3000 -it kiebitz-apps"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.19.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@lingui/conf": "^3.13.0",
    "@lingui/core": "^3.13.0",
    "@types/eslint": "^8.2.1",
    "@types/tailwindcss": "^2.2.4",
    "cross-env": "^7.0.3",
    "cypress": "^9.1.1",
    "cypress-fail-fast": "^3.3.0",
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "postcss": "^8.4.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.0.2",
    "prettier": "^2.5.0",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.1.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.2",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "browserslist": "^4.16.5",
    "immer": "^9.0.6",
    "glob-parent": "^6",
    "trim": "^1",
    "webpack": "^5"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "postcss": {
    "plugins": {
      "tailwindcss/nesting": {},
      "tailwindcss": {},
      "postcss-flexbugs-fixes": {},
      "postcss-preset-env": {
        "autoprefixer": {
          "flexbox": "no-2009"
        },
        "stage": 3,
        "features": {
          "nesting-rules": false,
          "custom-properties": false
        }
      }
    }
  }
}
