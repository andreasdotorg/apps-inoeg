{
  "name": "@kiebitz-oss/ui",
  "description": "Kiebitz Web Applications",
  "version": "1.0.0",
  "author": "Benjamin Bender <bb@codepoet.de>",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "source": "src/index.ts",
  "module": "dist/index.js",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiebitz-oss/apps-ffm",
    "directory": "packages/ui"
  },
  "bugs": "https://github.com/kiebitz-oss/apps-ffm/issues",
  "engines": {
    "node": "^14.18.1 || >=16.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "bundle": "microbundle --tsconfig ./tsconfig.build.json --jsx 'React.createElement' --jsxImportSource react --globals react/jsx-runtime=jsx -f cjs,es",
    "build": "rimraf --no-glob ./dist && cross-env NODE_ENV=production yarn run bundle --compress",
    "dev": "yarn run bundle watch --no-compress",
    "clean": "rimraf --no-glob ./dist",
    "test": "cross-env NODE_ENV=test jest"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "react-use": "^17.3.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "cross-env": "^7.0.3",
    "jest": "^27.4.5",
    "microbundle": "^0.14.2",
    "rimraf": "^3.0.2",
    "stylelint": "^14.1.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.2",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "dayjs": "^1.10",
    "next": "^12",
    "react": "^17 || ^18.0.0-rc.0 || ^18.0.0",
    "react-dom": "^17 || ^18.0.0-rc.0 || ^18.0.0",
    "react-hook-form": "^7"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "stylelint": {
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "extends": [
      "stylelint-config-recommended",
      "stylelint-a11y/recommended"
    ],
    "rules": {
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "severity": "warning"
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "layer",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "block-no-empty": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": "global"
        }
      ]
    }
  }
}
